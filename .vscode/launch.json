{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Portfolio (Python Server)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "console": "integratedTerminal",
            "env": {
                "PORT": "8000"
            }
        },
        {
            "name": "Launch Portfolio (Live Server)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["serve", ".", "-p", "8000"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}